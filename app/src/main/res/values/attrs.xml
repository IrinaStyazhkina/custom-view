<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="textSize" format="dimension|reference"/>
    <attr name="lineWidth" format="dimension|reference"/>
    <attr name="color1" format="color|reference"/>
    <attr name="color2" format="color|reference"/>
    <attr name="color3" format="color|reference"/>
    <attr name="color4" format="color|reference"/>

    <declare-styleable name="CustomView">
        <attr name="textSize"/>
        <attr name="lineWidth"/>
        <attr name="color1"/>
        <attr name="color2"/>
        <attr name="color3"/>
        <attr name="color4"/>
        <attr name="animationType" format="enum">
            <enum name="rotation" value="0"/>
            <enum name="sequential" value="1"/>
            <enum name="bidirectional" value="2"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="NotFilledCustomView">
        <attr name="textSize"/>
        <attr name="lineWidth"/>
        <attr name="color1"/>
        <attr name="color2"/>
        <attr name="color3"/>
        <attr name="color4"/>
    </declare-styleable>
</resources>